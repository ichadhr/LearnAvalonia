<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <StackPanel Spacing="5"> </StackPanel>
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>
    <Styles.Resources>
        <Thickness x:Key="PageMargin">40 40 40 0</Thickness>
    </Styles.Resources>
    <Style Selector="Button.default">
        <Setter Property="BorderBrush" Value="#1c1c1c"/>
        <Setter Property="BorderThickness" Value="1.7"/>
        <Setter Property="Background" Value="#ff464646"/>
        <Setter Property="Foreground" Value="#ffd6d6d6"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Padding" Value="8"/>
    </Style>
    <Style Selector="Button.default:pointerover/template/ContentPresenter">
        <Setter Property="BorderBrush" Value="#202020"/>
        <Setter Property="Opacity" Value="0.92"/>
    </Style>
    <Style Selector="Button.default:pressed/template/ContentPresenter">
        <Setter Property="BorderBrush" Value="#242424"/>
        <Setter Property="Background" Value="#ff595959"/>
        <Setter Property="Padding" Value="8"/>
    </Style>
</Styles>
